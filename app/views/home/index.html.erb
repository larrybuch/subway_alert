<%= form_for (@user) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :username %>
  <%= f.text_field :username %>
  <br>
  <%= f.label :password %>
  <%= f.text_field :password %>
  <br>
  <%= f.label :password_confirmation %>
  <%= f.text_field :password_confirmation %>
  <br>
  <%= f.label :phone %>
  <%= f.text_field :phone %>
  <br>
  Which lines do you want to be notified about?
  <br>
<!--   iterate over all of the lines in the database and add a checkbox for each one -->
  <% @lines.each do |line| %>
    <%= line.line %>
    <%= check_box_tag '[line_ids][]', line.id, @user.lines.include?(line) %>
  <% end %>
  <br>
  <%= f.submit %>
<% end %>
