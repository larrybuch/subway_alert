  <h2>Sign-up</h2>

  <div class="column-wrapper">
    <div class="column-2">
      <%= form_for (@user) do |f| %>
        <div class="field">
          <%= f.label :name %>
        </div>

        <div class="field-box">
          <%= f.text_field :name %>
        </div>

        <div class="field">
          <%= f.label :username %>
        </div>

        <div class="field-box">
          <%= f.text_field :username %>
        </div>

        <div class="field">
          <%= f.label :password %>
        </div>

        <div class="field-box">
          <%= f.password_field :password %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %>
        </div>

        <div class="field-box">
          <%= f.password_field :password_confirmation %>
        </div>

        <div class="field">
          <%= f.label :phone %>
        </div>

        <div class="field-box">
          <%= f.text_field :phone %>
        </div>
    </div>

    <div class="column-2">
      <div class="field">
        Which lines do you want to be notified about?
      </div>
        <div class="lines">
          <%= check_box_tag '[line_ids][]', @lines[0].id, @user.lines.include?(@line) %>
          <% @lines[0].line %>
          <div class="red">1</div>
          <div class="red">2</div>
          <div class="red">3</div>

          <div class="clear"></div>

          <%= check_box_tag '[line_ids][]', @lines[1].id, @user.lines.include?(@line) %>
          <% @lines[1].line %>
          <div class="green">4</div>
          <div class="green">5</div>
          <div class="green">6</div>

          <div class="clear"></div>

          <%= check_box_tag '[line_ids][]', @lines[2].id, @user.lines.include?(@line) %>
          <% @lines[2].line %>
          <div class="purple">7</div>

          <div class="clear"></div>

          <%= check_box_tag '[line_ids][]', @lines[3].id, @user.lines.include?(@line) %>
          <% @lines[3].line %>
          <div class="blue">A</div>
          <div class="blue">C</div>
          <div class="blue">E</div>

          <div class="clear"></div>

          <%= check_box_tag '[line_ids][]', @lines[4].id, @user.lines.include?(@line) %>
