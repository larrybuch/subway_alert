          <% @lines[6].line %>
          <div class="brown">J</div>
          <div class="brown">Z</div>

          <div class="clear"></div>

          <%= check_box_tag '[line_ids][]', @lines[7].id, @user.lines.include?(@line) %>
          <% @lines[7].line %>
          <div class="gray">L</div>

          <div class="clear"></div>

          <%= check_box_tag '[line_ids][]', @lines[8].id, @user.lines.include?(@line) %>
          <% @lines[8].line %>
          <div class="yellow">N</div>
          <div class="yellow">Q</div>
          <div class="yellow">R</div>

          <div class="clear"></div>
        </div>

