<%= form_tag '/login' do %>
  <%= label_tag 'Username' %>
  <%= text_field_tag 'username' %>
  <br>
  <%= label_tag 'Password' %>
  <%= password_field_tag 'password' %>
  <br>
  <%= submit_tag 'Login' %>
<% end %>