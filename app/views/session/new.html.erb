<h1>Log In</h1>

<div class="column-wrapper">
  <div class="column-2">
    <%= form_tag '/login' do %>
      <div class="field">
        <%= label_tag 'Username' %>
      </div>
      <div class="field-box">
        <%= text_field_tag 'username' %>
      </div>
  </div>
  <div class="column-2">
      <div class="field">
        <%= label_tag 'Password' %>
      </div>
      <div class="field-box">
        <%= password_field_tag 'password' %>
      </div>
  </div>
      <%= submit_tag 'Login' %>
    <% end %>
</div>

<div class="clear"></div>